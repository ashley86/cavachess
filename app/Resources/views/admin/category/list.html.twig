{% extends 'layout.html.twig' %}
    
{% block page_title %}
    <h1>
        Gestion des catégories
    </h1>
{% endblock %}
    
{% block content %}
    <hr>
    <p><a href="{{path('app_admin_category_edit')}}" title="Ajouter catégorie" class="btn btn-primary">Ajouter une catégorie</a></p>
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th width="100px"></th>
                    <th width="100px"></th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{category.id}}</td>
                        <td>{{category.name}}</td>
                        <td><a href="{{path('app_admin_category_edit', {"id":category.id})}}" class="btn btn-warning" title="Modifier catégorie"><span class="glyphicon glyphicon-pencil"></span></a></td>
                        <td><a href="{{path('app_admin_category_delete', {"id":category.id})}}" class="btn btn-danger" title="Supprimer catégorie"><span class="glyphicon glyphicon-trash"></span></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" align="center">Aucun résultat</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}