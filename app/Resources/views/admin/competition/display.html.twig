{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Gestion compétitions</h1>   
    <hr>
  
    <section>
        <h2>Opération compétition</h2>
        <div class="row">
            <div class="col-sm-4 col-md-4 col-lg-3">
                {{render(url('app_admin_competition_addtypeofgame'))}}
            </div>
            
            <div class="col-sm-4 col-md-4 col-lg-3">
                {{render(url('app_admin_competition_addgamemode'))}}
            </div>
            
            <div class="col-sm-4 col-md-4 col-lg-3">
                {{render(url('app_admin_competition_addcompetition'))}}
            </div>
                
            <div class="col-sm-4 col-md-4 col-lg-3">
                {% if app.request.get('_route') == 'app_admin_competition_editcompetition' %}
                    {{form_start(form)}} 
                    {{form_row(form.name)}}
                    {{form_row(form.gamemode)}} {# game_mode_id #}
                    {{form_row(form.typeofgame)}} {# type_of_game_id #}
                    <div class="form-btn-group pull-right">
                        <button type="submit" class="btn btn-default btn-ok">Modifier</button>
                        <a href="{{path('app_admin_competition_displaycompetitions')}}" class="btn btn-default" title="">Annuler</a>
                    </div>
                    {{form_end(form)}}
                {% endif %}
            </div>
        </div>
    </section>
    
    <div class="clearfix"></div>
    
    <section>
        <h2>Liste des compétitions</h2>    
        {#{{render(controller('AppBundle:Admin\\Competition:listCompetitions'))}}#}
        {{render(url('app_admin_competition_listcompetitions'))}}
    </section>    
{% endblock %}
