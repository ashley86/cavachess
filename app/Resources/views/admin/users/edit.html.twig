{% extends "layout.html.twig" %}

{% block content %}
    {% if form_admin %}
        <h1>Modification des droits pour {{ user.username }}</h1>
    {% else %}
        <h1>Modification du compte {{ user.username }}</h1>
    {% endif %}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            {{ form_start(form) }} {# ouvre la balise <form> #}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {% if form_admin %}
                {{ form_row(form.role) }}
            {% else %}
                {{ form_row(form.plainPassword) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.avatar) }}
            {% endif %}
            <div class="form-btn-group pull-right">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_admin_user_listusers') }}" class="btn btn-default">Annuler</a>
            </div>
            {{ form_end(form) }} {# ferme la balise <form> #}
        </div>
    </div>
{% endblock %}