{% extends "layout.html.twig" %}

{% block content %}
    <h1>Gestion des utilisateurs</h1>
    <hr>
    <section>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Pseudo</th>
                <th>E-Mail</th>
                <th>Accès</th>
                <th>Avatar</th>
                <th width="100px"></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                    <td class='admin-img-user-list'>
                        {% if user.avatar %}
                            <img src="{{ asset('upload/avatar/' ~ user.avatar) }}"/>
                        {% else %}
                            <img src="{{ asset('img/default_avatar.png') }}"/>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_admin_user_editusers', {"id": user.id}) }}" class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Modifier"></span>
                        </a>
                        <a href="{{ path('app_admin_user_deleteusers', {"id": user.id}) }}" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true" title="Supprimer"></span>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" align="center">Aucun résultat</td>
                </tr>
            {% endfor %}
        </table>
    </section>
{% endblock %}