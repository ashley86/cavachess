{{dump(rankings)}}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>              
            <th>Identifiant</th>                
            <th>Joueur</th>                
            <th>Compétition</th>                
            <th>Points</th>                                                     
        </tr>
    </thead>
    <tbody>
        {% for ranking in rankings %}
            <tr>
                <td>{{ranking.id}}</td>
                <td>{{ranking.user_id.username}}</td>
                <td>{{ranking.competition_id.name}}</td>
                <td>{{ranking.points}}</td>
            </tr>    
        {% else %}
            <tr>
                <td colspan="2" align="center">Aucun résultat</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
